rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 컬렉션 - 인증된 사용자만 자신의 데이터 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 손동작 패턴 - 로그인한 사용자만 자신의 패턴 관리 가능
    match /gesturePatterns/{patternId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // IR 신호 - 공개 신호는 모든 인증된 사용자가 읽기 가능, 개인 신호는 소유자만
    match /irSignals/{signalId} {
      allow read: if request.auth != null && (resource.data.isPublic == true || request.auth.uid == resource.data.userId);
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // 사용 분석 데이터 - 로그인한 사용자만 자신의 데이터 생성/읽기
    match /usageAnalytics/{analyticsId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // 기기 설정 - 사용자별 서브컬렉션
    match /users/{userId}/deviceConfigs/{configId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 